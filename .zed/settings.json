{
  "languages": {
    "zig": {
      "format_on_save": true,
      "lint_on_save": true,
      "build_on _save": true
    }
  },
  "editor": {
    "indent_size": 4,
    "tab_size": 4,
    "font_size": 14,
    "line_numbers": true,
    "cursor_line": true,
    "cursor_column": true
  },
  "key_bindings": {
    "save": "Ctrl+S",
    "build": "Ctrl+B",
    "run": "Ctrl+R"
  }
}
